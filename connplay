#!/usr/bin/env python
import os, sys
import __init__

def usage():
    print
    print '''\033[;32m
    Replay video of record infomation.

    Usage:  %s ls               display all videos list.
            %s play video_name  play video file.

    \033[0m''' % (sys.argv[0],sys.argv[0],sys.argv[0])
    sys.exit()

try:
    videolist = []
    for root, dirs, files in os.walk('videos'):
        for f in files:
            if not f[:1] == '.':
                videolist.append(f.replace('.time', '').replace('.his', ''))
    videolist = list(set(videolist))

    if sys.argv[1] == 'ls':
        for i in videolist: print i 
    elif sys.argv[1] == 'play':
        try:
            if sys.argv[2] in videolist:
                print sys.argv[2]
                cmd = 'bin/scriptreplay videos/%s.time videos/%s.his' % (sys.argv[2], sys.argv[2])
                os.system(cmd)
            else:
                print 'choice play file name'
        except:
            print 'choice play file name'
    else:
        print "replay error"
        sys.exit()
except:
        usage() 
        #pass


